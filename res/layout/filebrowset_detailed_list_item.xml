<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical" >

    <ImageView
        android:id="@+id/file_thumbnails"
        android:layout_width="@dimen/simple_list_thumbnails_hight"
        android:layout_height="@dimen/simple_list_thumbnails_hight"
        android:scaleType="fitCenter" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        >

        <TextView
            android:id="@+id/file_name"
            android:layout_width="fill_parent"
            android:singleLine="true"
            android:ellipsize="middle"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:paddingLeft="10dp" />

        <TextView
            android:id="@+id/file_date"
            android:layout_below="@id/file_name"
            android:layout_width="wrap_content"
            android:paddingLeft="10dp"
            android:layout_height="wrap_content" />
        
        <TextView
            android:id="@+id/file_size"
            android:layout_toRightOf="@id/file_date"
            android:layout_alignBottom="@id/file_date"
            android:layout_alignParentRight="true"
            android:layout_width="fill_parent"
            android:gravity="right"
            android:layout_height="wrap_content" />
    </RelativeLayout>

</LinearLayout>